<div id="error_msg">
<% if flash[:message] %>
    <p>
        <%= flash[:message] %>
    </p>
<% end %>
</div>
<h2 id="logo"> All Items For Sale </h2>

<form method="get" action="/items">
  <label for="name_input">Name:</label>
  <input type="text" name="query" id="name_input" >
  <input type="submit" value="Search!">
</form>


<div class="container">
    <% @sellers.each do |seller| %>
        <div class="sale_info"><p class="item_sale"><%= link_to seller.item.name, seller.item, class: "thumb_name" %><br>
        $ <%= seller.item.price %><br>
        <%= seller.item.description %><br>
       </p></div>
    <% end %>
</div>




    <nav>
    <%= link_to "Post a New Item for Sale", new_item_path, class: 'small_link' %>
    <br>
    <%= link_to "Manage My Account", user_path(@user_id), class: 'small_link' %>
    <br>
    <%= link_to "My Page", user_path(@user_id), class: 'small_link' %> 
    <br>
    <%= button_to "Logout", "/logout", method: :delete %>  
    </nav>
