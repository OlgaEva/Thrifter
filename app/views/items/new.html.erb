<h1>Post an Item for Sale!</h1>

<%= link_to "Back to all Items", items_path %>

<%= form_for @item do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :price %>
    <%= f.number_field %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.label :category %>
    <%= f.text_field %>
    <%= f.label :img_url %>
    <%= f.text_field :img_url %>
    <%= f.submit %>
<% end %>